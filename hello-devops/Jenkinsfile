pipeline {
    agent any

    tools {
        maven 'Maven-3.9.2'  // Assure-toi de configurer Maven dans Jenkins (Manage Jenkins -> Global Tool Configuration)
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ilalo20/Projet-DevOps-ImadLalouchi.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar'
            }
        }
    }

    post {
        success {
            echo "Déploiement réussi ! ✅"
        }
        failure {
            echo "Le build a échoué ❌"
        }
    }
}
