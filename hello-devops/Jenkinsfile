pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/ilalo20/Projet-DevOps-ImadLalouchi.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: '**/target/*.jar'
            }
        }
    }

    post {
        success {
            echo "Déploiement réussi ! ✅"
            // Ici tu peux ajouter des commandes de déploiement réelles, par exemple :
            // sh 'docker build -t mon-app .'
            // sh 'docker run -d --name mon-app mon-app'
        }
        failure {
            echo "Le build a échoué ❌"
        }
    }
}
